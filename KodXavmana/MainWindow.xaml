<Window x:Class="KodXavmana.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KodXavmana"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:KodXavmana.ViewModel" 
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="170"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Margin="10" Grid.Row="0">
                <Label FontSize="18" FontWeight="Bold" 
                       Content="Введите строку:"/>
                <TextBox TextWrapping="Wrap" 
                         FontSize="16" Height="110"
                         Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Height="35" Width="120"
                        Content="Создание таблицы"
                        HorizontalAlignment="Right"
                        Margin="0 0 20 0"
                        Command="{Binding GetTableLetterProbabilitiesCommand}"/>
                <Button Grid.Column="1" 
                        Height="35" Width="120"
                        Content="Кодирование"
                        HorizontalAlignment="Left"
                        Margin="20 0 0 0"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <StackPanel Margin="10" Grid.Row="0">
                <Label FontSize="18" FontWeight="Bold" 
                       Content="Код в виде битов:"/>
                <TextBox TextWrapping="Wrap" 
                         FontSize="16" Height="110"
                         Text="{Binding OutputText}"/>
            </StackPanel>
        </Grid>
        
        <StackPanel Grid.RowSpan="2" Grid.Column="1"
                    Margin="10">
            <Label FontSize="16" FontWeight="Bold"
                   Content="Вероятность букв"/>
            <TextBox FontSize="16"
                     TextWrapping="Wrap"
                     Text="{Binding TableLetter}"/>
        </StackPanel>
    </Grid>
</Window>
